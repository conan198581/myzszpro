@model RPZSZ.AdminWeb.Models.RoleEditViewModel
@{
    Layout = null;
}


<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <!--[if lt IE 9]>
    <script type="text/javascript" src="~/lib/html5.js"></script>
    <script type="text/javascript" src="~/lib/respond.min.js"></script>
    <script type="text/javascript" src="~/lib/PIE_IE678.js"></script>
    <![endif]-->
    <link href="~/css/H-ui.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/H-ui.admin.css" rel="stylesheet" type="text/css" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/Hui-iconfont/1.0.1/iconfont.css" rel="stylesheet" type="text/css" />
    <!--[if IE 6]>
    <script type="text/javascript" src="~/lib/DD_belatedPNG_0.0.8a-min.js" ></script>
    <script>DD_belatedPNG.fix('*');</script>
    <![endif]-->
    <title>编辑角色</title>
</head>
<body>
    <div class="pd-20">
        <form action="" method="" class="form form-horizontal" id="formRoleEdit">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="row cl">
                <label class="form-label col-2"><span class="c-red">*</span>角色名称：</label>
                <div class="formControls col-10">
                    <input type="text" class="input-text" value="@Model.Name" placeholder="" id="name" name="name" datatype="*4-16" nullmsg="角色不能为空">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-2">所有权限：</label>
                <div class="formControls col-10">
                    <dl class="permission-list">
                        <dd>
                            <dl class="cl permission-list2">
                                <dd>
                                    @foreach (var item in Model.PermissionDTOs)
                                    {
                                        <label class="">
                                            <input type="checkbox" value="@item.Id" name="permissionIds" id="permissionIds"
                                                   checked="@Model.OwnPermissionDTOs.Select(x=>x.Id).Contains(item.Id)">
                                            @item.Name
                                        </label>
                                    }
                                </dd>
                            </dl>
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="row cl">
                <div class="col-10 col-offset-2">
                    <button type="button" class="btn btn-success radius" id="roleEditButton" name="roleEditButton"><i class="icon-ok"></i> 确定</button>
                </div>
            </div>
        </form>
    </div>
    <script type="text/javascript" src="~/lib/jquery/1.9.1/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/layer/1.9.3/layer.js"></script>
    <script type="text/javascript" src="~/lib/laypage/1.2/laypage.js"></script>
    <script type="text/javascript" src="~/lib/My97DatePicker/WdatePicker.js"></script>
    <script type="text/javascript" src="~/js/H-ui.js"></script>
    <script type="text/javascript" src="~/js/H-ui.admin.js"></script>
    <script>
        $(function () {
            $('#roleEditButton').on('click', function () {
                var formData = $("#formRoleEdit").serializeArray();
                $.ajax({
                    url: "/Role/Edit",
                    type: "post",
                    datatype: "json",
                    data: formData,
                    success: function (respData) {
                        if (respData.status == "ok") {
                            //layer.msg('新增成功', { icon: 1, time: 1000 });
                            parent.location.reload();
                        }
                        else {
                            layer.msg('新增失败', { icon: 2, time: 1000 });
                        }
                    },
                    error: function () {
                        layer.msg('通信失败!',{icon:2,time:1000});
                    }
                });
            });
        });
    </script>
</body>
</html>