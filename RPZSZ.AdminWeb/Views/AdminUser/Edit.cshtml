@model RPZSZ.AdminWeb.Models.AdminUserEditGetModel
@{
    Layout = null;
}


<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <!--[if lt IE 9]>
    <script type="text/javascript" src="~/lib/html5.js"></script>
    <script type="text/javascript" src="~/lib/respond.min.js"></script>
    <script type="text/javascript" src="~/lib/PIE_IE678.js"></script>
    <![endif]-->
    <link href="~/css/H-ui.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/H-ui.admin.css" rel="stylesheet" type="text/css" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/Hui-iconfont/1.0.1/iconfont.css" rel="stylesheet" type="text/css" />
    <!--[if IE 6]>
    <script type="text/javascript" src="~/lib/DD_belatedPNG_0.0.8a-min.js" ></script>
    <script>DD_belatedPNG.fix('*');</script>
    <![endif]-->
    <title>新建后台用户</title>
</head>
<body>
    <div class="pd-20">
        <form action="" method="" class="form form-horizontal" id="formAdminUserEdit">
            <input type="hidden" id="id" name="id" value="@Model.AdminUserDTO.Id" />
            <div class="row cl">
                <label class="form-label col-2"><span class="c-red">*</span>手机号：</label>
                <div class="formControls col-10">
                    <input type="text" class="input-text" value="@Model.AdminUserDTO.PhoneNum" placeholder="" id="phoneNum" name="phoneNum" datatype="*4-16" nullmsg="手机号不能为空" readonly >
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-2"><span class="c-red">*</span>姓名：</label>
                <div class="formControls col-10">
                    <input type="text" class="input-text" value="@Model.AdminUserDTO.Name" placeholder="" id="name" name="name" datatype="*4-16" nullmsg="姓名不能为空">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-2"><span class="c-red">*</span>初始密码：</label>
                <div class="formControls col-10">
                    <input type="text" class="input-text" value="" placeholder="" id="password" name="password" datatype="*4-16" nullmsg="密码不能为空">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-2"><span class="c-red">*</span>确认密码：</label>
                <div class="formControls col-10">
                    <input type="text" class="input-text" value="" placeholder="" id="ConfirmPassword" name="ConfirmPassword" datatype="*4-16" nullmsg="确认密码不能为空">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-2"><span class="c-red">*</span>邮箱：</label>
                <div class="formControls col-10">
                    <input type="text" class="input-text" value="@Model.AdminUserDTO.Email" placeholder="" id="Email" name="Email" datatype="*4-16" nullmsg="邮箱不能为空">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-2"><span class="c-red">*</span>城市：</label>
                <div class="formControls col-10">
                    @Html.DropDownList("cityId", new SelectList(Model.Cities, "Id", "Name", Model.AdminUserDTO.CityId))
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-2">所有角色：</label>
                <div class="formControls col-10">
                    <dl class="permission-list">
                        <dd>
                            <dl class="cl permission-list2">
                                <dd>
                                    @foreach (var item in Model.RoleDTOs)
                                    {
                                        <label class="">
                                            <input type="checkbox" value="@item.Id" name="roleIds" id="roleIds" checked="@Model.OwnRoleDTOs.Select(x=>x.Id).ToList().Contains(item.Id)">
                                            @item.Name
                                        </label>
                                    }
                                </dd>
                            </dl>
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="row cl">
                <div class="col-10 col-offset-2">
                    <button type="button" class="btn btn-success radius" id="adminUserEidtButton" name="adminUserEidtButton"><i class="icon-ok"></i> 确定</button>
                </div>
            </div>
        </form>
    </div>
    <script type="text/javascript" src="~/lib/jquery/1.9.1/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/layer/1.9.3/layer.js"></script>
    <script type="text/javascript" src="~/lib/laypage/1.2/laypage.js"></script>
    <script type="text/javascript" src="~/lib/My97DatePicker/WdatePicker.js"></script>
    <script type="text/javascript" src="~/js/H-ui.js"></script>
    <script type="text/javascript" src="~/js/H-ui.admin.js"></script>
    <script>
        $(function () {
            $('#adminUserEidtButton').on('click', function () {
                var formData = $("#formAdminUserEdit").serializeArray();
                $.ajax({
                    url: "/AdminUser/Edit",
                    type: "post",
                    datatype: "json",
                    data: formData,
                    success: function (respData) {
                        if (respData.status == "ok") {
                            //layer.msg('新增成功', { icon: 1, time: 1000 });
                            parent.location.reload();
                        }
                        else {
                            layer.msg('新增失败', { icon: 2, time: 1000 });
                        }
                    },
                    error: function () {
                        layer.msg('通信失败!', { icon: 2, time: 1000 });
                    }
                });
            });
        });
    </script>
</body>
</html>